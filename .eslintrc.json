{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": [
            0
        ],
        "react/no-string-refs": [
            "warn"
        ],
        "react/display-name": [
            "warn"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            2
        ],
        "no-unused-vars": ["warn"],
        "no-async-promise-executor": ["warn"]
    },
    "parser": "babel-eslint"
}